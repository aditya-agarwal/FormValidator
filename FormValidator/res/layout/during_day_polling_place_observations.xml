                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:hint="@string/empty_string"
                    android:singleLine="true" />
            </TableRow>

            <TableRow
                android:id="@+id/during_day_polling_place_observations_tableRow6"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@color/header_background_color"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:tag="@string/gen_tag_required" >

                <TextView
                    android:id="@+id/during_day_polling_place_observations_question_6"
                    style="@style/text_view_font_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="@string/question_5" />

                <com.formvalidator.widget.RadioGroup.CustomRadioGroup
                    android:id="@+id/during_day_polling_place_observations_answer_6_rg"
                    android:layout_width="wrap_content"
