                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/gen_no"
                        android:textColor="@android:color/white" />
                </com.formvalidator.widget.RadioGroup.CustomRadioGroup>
            </TableRow>

            <TableRow
                android:id="@+id/during_day_polling_place_observations_tableRow3_comment"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:tag="@string/gen_tag_required" >

                <EditText
                    android:id="@+id/during_day_polling_place_observations_answer_3_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:hint="@string/hint_no"
                    android:singleLine="true"
                    android:tag="@string/gen_tag_required_no" />
            </TableRow>

            <TableRow
                android:id="@+id/during_day_polling_place_observations_tableRow4"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@color/header_background_color"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:tag="@string/gen_tag_required" >

                <TextView
                    android:id="@+id/during_day_polling_place_observations_question_4"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="@string/question_4" />

                <com.formvalidator.widget.RadioGroup.CustomRadioGroup
                    android:id="@+id/during_day_polling_place_observations_answer_4_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/during_day_polling_place_observations_q4_radio_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/gen_yes"
                        android:textColor="@android:color/white" />

                    <RadioButton
                        android:id="@+id/during_day_polling_place_observations_q4_radio_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="@string/gen_no"
                        android:textColor="@android:color/white" />
                </com.formvalidator.widget.RadioGroup.CustomRadioGroup>
            </TableRow>

            <TableRow
                android:id="@+id/during_day_polling_place_observations_tableRow4_comment"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@color/header_background_color"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:tag="@string/gen_tag_required" >

                <EditText
                    android:id="@+id/during_day_polling_place_observations_answer_4_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:hint="@string/hint_no"
                    android:singleLine="true"
                    android:tag="@string/gen_tag_required_no" />
            </TableRow>

            <TableRow
                android:id="@+id/during_day_polling_place_observations_tableRow5"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:tag="@string/gen_tag_required" >

                <TextView
                    android:id="@+id/during_day_polling_place_observations_question_5"
                    style="@style/text_view_font_style"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:gravity="left"
                    android:paddingLeft="5dip"
                    android:text="@string/question_5" />

                <EditText
                    android:id="@+id/during_day_polling_place_observations_answer_5"
